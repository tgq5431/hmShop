.shop {
  background-color: #eee;
  padding-top: 6rpx;
}
.shop .title {
  text-align: center;
  color: #df4d3b;
  background-color: #fff;
  padding: 12px;
  font-size: 20px;
  letter-spacing: 40rpx;
  font-weight: 500;
}
