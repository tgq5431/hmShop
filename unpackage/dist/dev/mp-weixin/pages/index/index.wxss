  width: 100%;
}
.shop .shop_list .shop_item .price {
  margin: 15rpx 0;
}
.shop .shop_list .shop_item .price .new_price {
  color: #df4d3b;
}
.shop .shop_list .shop_item .price .old_price {
  text-decoration: line-through;
